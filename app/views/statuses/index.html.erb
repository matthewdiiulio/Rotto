<div class="page-header">
  <h1>Timeline</h1>
</div>
<% @statuses.each do |status| %>
  <div class="status"><strong><%= status.name %></strong>
    <p><%= status.content %></p>
    <div class="meta">
      <%= link_to "Show", status %>
      <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
    <span class="admin">
      <%= link_to "Edit", edit_status_path(status) %>
    </span>
    </div>
  </div>
  
<% end %>