<div class="row">
  <div class="col-md-8 col-md-push-4">
    <div class="page-header">
      <h1>Timeline</h1>
    </div>
    <% @statuses.each do |status| %>
    <div class="status">
      <strong><%= status.name %></strong>
      <p><%= status.content %></p>
      <div class="meta">
        <%= link_to time_ago_in_words(status.created_at) + " ago", status %> 
        <span class="admin">
          | <%= link_to "Edit", edit_status_path(status) %> | 
          <%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sure your want to delete this status?"} %>
        </span>
      </div>
    </div>
    <% end %>
  </div>
  <div class="col-md-4 col-md-pull-8">
    <div class="page-header">
      <h1>Post New Status</h1>
    </div>
    <form>
      <div class="form-group">
        <textarea class="form-control" rows="4" placeholder="What's going on?"></textarea>
        <%= link_to "Post a New Status", new_status_path, class: "btn btn-success" %>
      </div>
    </form>
  </div>
</div>